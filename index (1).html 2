    <div class="icon" id="openChess">
      <img src="https://img.icons8.com/color/48/000000/chess.png" class="mx-auto"/>
      <div>Mini Chess</div>
    </div>

    <!-- Windows -->
    <div class="window" id="officeWindow">
      <div class="title-bar">Mini Office <span class="close-btn" onclick="$('#officeWindow').hide()">✖</span></div>
      <textarea id="editor" placeholder="Type your notes here..."></textarea>
      <button onclick="downloadDoc()" class="bg-blue-500 text-white px-4 py-2 m-2 rounded">Download</button>
    </div>

    <div class="window" id="chessWindow">
      <div class="title-bar">Mini Chess <span class="close-btn" onclick="$('#chessWindow').hide()">✖</span></div>
      <div id="board" style="width: 400px; margin: auto; padding: 20px;"></div>
      <button onclick="game.reset(); board.start();" class="bg-green-500 text-white px-4 py-2 m-2 rounded">Restart</button>
    </div>

    <!-- Taskbar -->
    <div id="taskbar">Mini Windows 11</div>
  </div>

  <script>
    // Open Windows
    $('#openOffice').click(() => $('#officeWindow').show());
    $('#openChess').click(() => $('#chessWindow').show());

    // Draggable Windows
    function makeDraggable(el) {
      let isDragging = false, x=0, y=0, offsetX=0, offsetY=0;
      const titleBar = el.querySelector('.title-bar');
      titleBar.addEventListener('mousedown', e => {
        isDragging = true;
        offsetX = e.clientX - el.offsetLeft;
        offsetY = e.clientY - el.offsetTop;
      });
      document.addEventListener('mousemove', e => {
        if (isDragging) {
          el.style.left = (e.clientX - offsetX) + 'px';
          el.style.top = (e.clientY - offsetY) + 'px';
        }
      });
      document.addEventListener('mouseup', () => isDragging = false);
    }
    document.querySelectorAll('.window').forEach(makeDraggable);

    // Mini Office download function
    function downloadDoc() {
      const text = document.getElementById('editor').value;
      const blob = new Blob([text], { type: 'text/plain' });
      const link = document.createElement('a');
      link.href = URL.createObjectURL(blob);
      link.download = 'document.txt';
      link.click();
    }

    // Chess Game
    var board, game = new Chess();
    function onDragStart (source, piece, position, orientation) {
      if (game.game_over() || (game.turn() === 'w' && piece.search(/^b/) !== -1) ||
          (game.turn() === 'b' && piece.search(/^w/) !== -1)) {
        return false;
      }
    }
    function onDrop (source, target) {
      var move = game.move({from: source, to: target, promotion: 'q'});
      if (move === null) return 'snapback';
    }
    function onSnapEnd () { board.position(game.fen()); }
    $(function () {
      board = Chessboard('board', {
        draggable: true,
        position: 'start',
        onDragStart: onDragStart,
        onDrop: onDrop,
        onSnapEnd: onSnapEnd
      });
    });
  </script>
</body>
